<form id="contact-form" class="flex flex-col gap-4">
  <div class="flex flex-col lg:flex-row gap-4">
    <label for="name" class="input input-bordered flex items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 16 16"
        fill="currentColor"
        class="h-4 w-4 opacity-70"
      >
        <path
          d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z"
        ></path>
      </svg>
      <input type="text" id="name" class="grow" placeholder="Nombre" />
    </label>

    <label for="email" class="input input-bordered flex items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 16 16"
        fill="currentColor"
        class="h-4 w-4 opacity-70"
      >
        <path
          d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z"
        ></path>
        <path
          d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z"
        ></path>
      </svg>
      <input type="email" id="email" class="grow" placeholder="Email" />
    </label>
  </div>
  <div>
    <label for="message" class="form-control">
      <textarea
        id="message"
        class="textarea textarea-bordered h-24"
        placeholder="Mensaje"></textarea>
    </label>
  </div>
  <div>
    <button
      type="submit"
      class="bg-dot-primary-700 px-4 py-2 rounded-lg hover:bg-dot-primary-800 transition-colors duration-200 ease-in-out"
    >
      Enviar
    </button>
  </div>
</form>
